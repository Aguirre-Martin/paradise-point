datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Day {
  id     Int    @id @default(autoincrement())
  date   String @unique
  status String
  note   String?
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  name      String
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Admin {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  name      String
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  lastLogin DateTime?
}

model Reservation {
  id          String   @id @default(uuid())
  checkIn     DateTime
  checkOut    DateTime
  clientName  String
  clientEmail String
  clientPhone String
  totalAmount Int
  paidAmount  Int      @default(0)
  status      String   // "se√±ado", "pagado", "cancelado" (deposit paid, fully paid, cancelled)
  notes       String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Client {
  id          String   @id @default(uuid())
  name        String
  email       String   @unique
  phone       String
  notes       String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

